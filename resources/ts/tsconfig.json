{
    "compilerOptions": {
        "extendedDiagnostics": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "DOM",
            "ES2015",
            "ES2017"
        ],
        "module": "None",
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "strict": true,
        "target": "ES2017"
    }
}
